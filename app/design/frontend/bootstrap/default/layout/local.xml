    <checkout_cart_index translate="label">
        <reference name="root">
            <remove name="left"/>
            <remove name="right"/>
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </checkout_cart_index>

    <!--
    One page checkout main layout

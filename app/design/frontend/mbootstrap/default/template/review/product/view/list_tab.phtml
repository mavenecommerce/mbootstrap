<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
        <h2><?php echo $this->__('Customer Reviews') ?></h2>

        <?php echo $this->getChildHtml('toolbar') ?>

        <ul class="media-list">
        <?php foreach ($_items as $_review):?>
            <li class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <small class="date"><?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>

                        <a class="subj" href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->htmlEscape($_review->getTitle()) ?></a>
                        <span class="author">(<?php echo $this->__('Review by <span>%s</span>', $this->htmlEscape($_review->getNickname())) ?>)</span>
                    </h4>

                    <?php $_votes = $_review->getRatingVotes(); ?>
                    <?php if (count($_votes)): ?>
                        <table class="ratings-table table table-bordered">
                            <col width="1" />
                            <col />
                            <tbody>
                            <?php foreach ($_votes as $_vote): ?>
                                <tr>
                                    <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
                                    <td>
                                        <div class="rating-box">
                                            <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                        </div>
                                    </td>
                                </tr>
                            <?php endforeach; ?>
                            </tbody>
                        </table>
                    <?php endif; ?>

                    <?php echo nl2br($this->htmlEscape($_review->getDetail())) ?>

                </div>
            </li>
        <?php endforeach; ?>
        </ul>

        <?php echo $this->getChildHtml('toolbar') ?>

    <?php endif;?>

    <?php
        $layout = Mage::getSingleton('core/layout');
        echo $layout->getBlock('content')->getChild('product.info')->getChild('info_tabs')->getChild('review_form')->toHtml();
    ?>

</div>
